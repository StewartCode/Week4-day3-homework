<div class="wholeform">

<form method="post" action="/student">

  <div class="button1">

  <label for="first-name-field">First Name:</label>
  <input
  type="text"
  name="first_name"
  id="first-name-field"
  />
  </div>

<div class="button2">

  <label for="last-name-field">Last Name:</label>
  <input
  type="text"
  name="last_name"
  id="last-name-field"
  />
  </div>

  <div class="button3">

  <label for="age-field">Age:</label>
  <input
  type="number"
  name="age"
  id="age-field"
  />
  </div>

  <div class="button4">

  <label for="house-selection">Select a house:</label>
  <select id="house" name="house_id">
    <% for house in @house %>
     <option value="<%=house.id%>"> <%= house.name %></option>
    <%end%>
  </select>
  </div>

  <input type="submit" value="send">
</form>

</div>
